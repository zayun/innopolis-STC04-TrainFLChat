<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/LFLChat</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <welcome-file-list>
        <welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>FilterAuth</filter-name>
        <filter-class>controllers.filters.FilterAuth</filter-class>
    </filter>
    <filter>
        <filter-name>FilterAdmin</filter-name>
        <filter-class>controllers.filters.FilterAdmin</filter-class>
    </filter>

    <servlet>
        <servlet-name>Authorization</servlet-name>
        <servlet-class>controllers.AuthorizationServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>DeleteMessage</servlet-name>
        <servlet-class>controllers.DeleteMessageServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>SendMessage</servlet-name>
        <servlet-class>controllers.SendMessageServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>PrivateOffice</servlet-name>
        <servlet-class>controllers.PrivateOfficeServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>EditUserServlet</servlet-name>
        <servlet-class>controllers.EditUserServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>GeneralChat</servlet-name>
        <servlet-class>controllers.GeneralChatServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>PrivateChatRoom</servlet-name>
        <servlet-class>controllers.PrivateChatRoomServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>AdminOffice</servlet-name>
        <servlet-class>controllers.AdminkaServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>controllers.RegistrationServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authorization</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteMessage</servlet-name>
        <url-pattern>/deletemsg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrivateOffice</servlet-name>
        <url-pattern>/rooms/privateoffice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GeneralChat</servlet-name>
        <url-pattern>/rooms/generalchat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUserServlet</servlet-name>
        <url-pattern>/admin/edituser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendMessage</servlet-name>
        <url-pattern>/sendmessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrivateChatRoom</servlet-name>
        <url-pattern>/rooms/privatechatroom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminOffice</servlet-name>
        <url-pattern>/admin/adminoffice</url-pattern>
    </servlet-mapping>
    <filter-mapping>
        <filter-name>FilterAuth</filter-name>
        <url-pattern>/rooms/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterAdmin</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterAdmin</filter-name>
        <url-pattern>/deletemsg</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>controllers.listeners.SessionListener</listener-class>
    </listener>
</web-app>